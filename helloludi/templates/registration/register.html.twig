{% extends 'base.html.twig' %}

{% block content %}
    <h1>Inscription</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'form-registration'}}) }}

    <div class="blog-form-element-wrapper">
        {% for type, messages in app.flashes %}
            <div class="flash-messages {{ type }}">
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-sm-12 col-md-2">
                {{ form_label(registrationForm.pseudo) }}
            </div>
            <div class="col-sm-12 col-md-8">
                {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Votre pseudo'}}) }}
                {{ form_errors(registrationForm.pseudo) }}
            </div>
        </div>
    </div>

    <div class="blog-form-element-wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-2">
                {{ form_label(registrationForm.email) }}
            </div>
            <div class="col-sm-12 col-md-8">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>
        </div>
    </div>

    <div class="blog-form-element-wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-2">
                {{ form_label(registrationForm.password) }}
            </div>
            <div class="col-sm-12 col-md-8">
                {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe'}}) }}
                {{ form_errors(registrationForm.password) }}
            </div>
        </div>
    </div>

    <div class="blog-form-element-wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-2">
                {{ form_label(registrationForm.name) }}
            </div>
            <div class="col-sm-12 col-md-8">
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.name) }}
            </div>
        </div>
    </div>

    <div class="blog-form-element-wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-2">
                {{ form_label(registrationForm.firstName) }}
            </div>
            <div class="col-sm-12 col-md-8">
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.firstName) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">S'inscrire</button>
    </div>

    {{ form_end(registrationForm) }}

{% endblock %}
