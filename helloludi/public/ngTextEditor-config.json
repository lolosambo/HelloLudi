{
  "locked": true,

  "settings": {
    "theme": "cold",
    "language": "fr",
    "iconSize": "small",
    "toolbarMode": "integrated"
  },

  "customColors": [
    "#B46565",
    "#80CBC4",
    "#FFF176",
    "#CFD8DC",
    "#010101"
  ],

  "autoDetectColors": {
    "enabled": true,
    "maxColors": 10,
    "maxTotal": 15,
    "includeGrays": true,
    "sortByHue": true
  },

  "customFonts": [
    { "value": "Arial, sans-serif", "label": "Arial" },
    { "value": "Impact, sans-serif", "label": "Impact" }
    { "value": "Arial Black, sans-serif", "label": "Arial Black" }
  ],

  "tools": {
    "font": {
      "paragraph": true,
      "font-family": true,
      "font-size": true,
      "line-height": true,
      "text-color": true,
      "bg-color": true
    },

    "text-style": {
      "bold": true,
      "italic": true,
      "underline": true,
      "strikethrough": true,
      "text-case": true,
      "superscript": true
    },

    "alignment": {
      "align-left": true,
      "align-center": true,
      "align-right": true,
      "align-justify": true,
      "indent": true,
      "outdent": true
    },

    "lists": {
      "list-ul": true,
      "list-ol": {
        "activate": true,
        "styles": ["decimal", "lower-alpha", "upper-alpha", "upper-roman", "lower-greek"]
      },
      "list-todo": true
    },

    "media": {
      "link": true,
      "image": {
        "activate": true,
        "allowImageUrl": true,
        "allowDragNDrop": true,
        "allowRotation": true,
        "allowOpacity": true,
        "allowBorder": true
      },
      "video": {
        "activate": true,
        "allowBorder": false
      },
      "table": true,
      "columns": {
        "activate": true,
        "maxNumberOfColumns": 3,
        "allowBorder": true
      },
      "emoji": true
    },

    "insert": {
      "quote": {
        "activate": true,
        "classic": true,
        "modern": true,
        "elegant": true,
        "minimal": true,
        "boxed": true,
        "shadow": true,
        "gradient": true,
        "retro": true,
        "academic": true,
        "callout": true
      },
      "code": true,
      "hr": true
    },

    "actions": {
      "undo": true,
      "redo": true,
      "preview": true,
      "export-json": true,
      "export-pdf": true,
      "export-html": true
    }
  }
}
